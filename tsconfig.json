{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
		"strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"strictPropertyInitialization": false,
		"outDir": "./build",
		"rootDir": "./src"
	},
	"include": ["src"],
	"exclude": ["node_modules"]
}
